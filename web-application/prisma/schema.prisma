generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        String    @id @default(uuid()) @db.Uuid
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    email     String    @unique
    firstName String
    lastName  String
    address   String
    password  String
    products  Product[]
}

model Product {
    id            String   @id @default(uuid()) @db.Uuid
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt
    title         String
    categories    String[]
    description   String
    purchasePrice Decimal
    rentPrice     Decimal
    rentOption    String
    ownerId       String   @db.Uuid
    owner         User     @relation(fields: [ownerId], references: [id])
}
